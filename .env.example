# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# FiLot API Configuration (Public API - No Auth Required)
FILOT_BASE_URL=https://filotmicroservice.replit.app

# Raydium Swap API Configuration
RAYDIUM_BASE_URL=https://your-api-domain.com/api/raydium

SOLANA_PRIVATE_KEY=your_solana_private_key_here

# OpenAI Configuration (Optional - for future AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_PATH=bot_data.db

# Agent Configuration
MONITORING_INTERVAL=10800  # 3 hours in seconds
MIN_APR_THRESHOLD=15.0     # Minimum APY percentage
MIN_TVL_THRESHOLD=1000000  # Minimum TVL in USD ($1M)
MAX_SLIPPAGE=5.0          # Maximum slippage percentage

# Risk Management Configuration
MAX_DAILY_EXPOSURE_USD=10000    # Maximum daily investment per user
MAX_SINGLE_INVESTMENT_USD=1000  # Maximum single investment

# Trading Configuration (Safety Settings)
AUTONOMOUS_TRADING_ENABLED=false  # Enable fully autonomous trading (HIGH RISK)
SIMULATION_MODE=true              # Run in simulation mode (recommended for testing)

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Performance Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
BATCH_SIZE=50
MAX_CONCURRENT_OPERATIONS=10

# Security Configuration
ADMIN_USER_IDS=123456789,987654321  # Comma-separated admin Telegram user IDs
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Notification Configuration
MAX_NOTIFICATIONS_PER_USER_PER_HOUR=5
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_TIMEOUT_SECONDS=30

# Market Data Configuration
PRICE_DATA_SOURCE=coingecko  # or other price data provider
MARKET_UPDATE_INTERVAL=300   # 5 minutes in seconds

# Development Configuration
DEBUG_MODE=false
MOCK_TRADES=false
TEST_USER_ID=your_test_user_id_here

# External Service Timeouts
HTTP_TIMEOUT_SECONDS=30
DATABASE_TIMEOUT_SECONDS=10
TELEGRAM_TIMEOUT_SECONDS=30

# Portfolio Management
ENABLE_STOP_LOSS=true
DEFAULT_STOP_LOSS_PERCENTAGE=10.0
ENABLE_TAKE_PROFIT=true
DEFAULT_TAKE_PROFIT_PERCENTAGE=50.0
REBALANCING_THRESHOLD=0.1

# Analytics and Reporting
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
GENERATE_DAILY_REPORTS=true
GENERATE_WEEKLY_REPORTS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=3600  # 1 hour in seconds
API_HEALTH_CHECK_TIMEOUT=10
DATABASE_HEALTH_CHECK_TIMEOUT=5

# Cache Configuration
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# Feature Flags
ENABLE_SOCIAL_TRADING=false
ENABLE_COPY_TRADING=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false
